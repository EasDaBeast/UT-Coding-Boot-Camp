<div class="container">
    <div class="row">
        <div class="col-xs-12 col-md-4">
            <h2>Add to wishlist:</h2>

            <form action="/" method="POST">
                <div class="form-group py-3">
                    <label for="name"><strong>Burger name</strong></label>
                    <input type="text" class="form-control form-control-lg" id="name" name="burger_name" required>
                    <div class="form-control-feedback"></div>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-warning btn-lg mt-4 mb-3 px-5 pt-3" id="button_submit">Submit</button>
                </div>
            </form>
        </div>


        <!-- Burgers to be eaten -->
        <div class="col-xs-12 col-md-4">
            <h2>Haven't eaten:</h2>
            {{#each burgers}}
                {{#unless this.devoured}}
                    <div class="burger_uneaten">{{this.name}}</div>
                {{/unless}}
            {{/each}}
        </div>

        <!-- Burgers finished -->
        <div class="col-xs-12 col-md-4">
            <h2>Have eaten:</h2>
            {{#each burgers}}
                {{#if this.devoured}}
                    <div class="burger_eaten">{{this.name}}</div>
                {{/if}}
            {{/each}}
        </div>
    </div>
</div>