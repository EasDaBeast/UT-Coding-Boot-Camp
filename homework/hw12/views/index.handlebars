<div class="container">
    <div class="row">
        <div class="col-12 col-lg-4">
            <div class="row">
                <div class="col-10">
                    <h2>{{title}} a burger:</h2>

                    <form action="{{action}}" method="POST">
                        <div class="form-group py-3">
                            <label for="burger_name"><strong>Burger name</strong></label>
                            <input type="hidden" name="id" value="{{id}}">
                            <input type="text" class="form-control form-control-lg" id="burger_name" name="name" value="{{name}}" required>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-info btn-lg mt-4 mb-3 px-5 pt-3" id="button_submit">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-4">
            <h2>Haven't eaten:</h2>

            {{#each burgers}}
                {{#unless this.devoured}}
                    <div class="row">
                        <div class="col-10 col-lg-9">
                            <form action="/{{this.id}}/1?_method=PATCH" method="POST">
                                <input type="hidden" name="name" value="{{this.name}}">
                                <button class="btn btn-warning burgers_not_devoured" type="submit">{{this.name}}</button>
                            </form>
                        </div>

                        <div class="col-1 col-lg-1">
                            <form action="/{{this.id}}?_method=DELETE" method="POST">
                                <button class="btn btn-link" type="submit"><i class="fa fa-times" aria-hidden="true"></i></button>
                            </form>

                            <form action="/{{this.id}}" method="GET">
                                <button class="btn btn-link" type="submit"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></button>
                            </form>
                        </div>
                    </div>
                {{/unless}}
            {{/each}}
        </div>

        <div class="col-12 col-lg-4">
            <h2>Have eaten:</h2>

            {{#each burgers}}
                {{#if this.devoured}}
                    <div class="row">
                        <div class="col-10 col-lg-9">
                            <button class="btn btn-success burgers_not_devoured" type="button">{{this.name}}</button>
                        </div>

                        <div class="col-1 col-lg-1">
                            <form action="/{{this.id}}?_method=DELETE" method="POST">
                                <button class="btn btn-link" type="submit"><i class="fa fa-times" aria-hidden="true"></i></button>
                            </form>

                            <form action="/{{this.id}}" method="GET">
                                <button class="btn btn-link" type="submit"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></button>
                            </form>
                        </div>
                    </div>
                {{/if}}
            {{/each}}
        </div>
    </div>
</div>